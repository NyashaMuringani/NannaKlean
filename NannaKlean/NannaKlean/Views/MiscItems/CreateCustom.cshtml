@model List<NannaKlean.Models.MiscItemType>

@{
    ViewData["Title"] = "Additional Cleaning Details";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Please check all that apply to the cleaning request</h1>
<hr />
<form asp-action="CreateCustomSave" method="POST" asp-route-Test="4">
    <dl class="row">
    @for (var i = 0; i < Model.Count(); i++)
    {
        <dd class="col-sm-4">
        <div>@Model[i].longDesc</div>
            </dd>
        <input asp-for="@Model[i].Id" type="hidden" />
        <input asp-for="@Model[i].shortDesc" type="hidden" />
            <input asp-for="@Model[i].longDesc" type="hidden" />
        <dt class="col-sm-6">
                <input asp-for="@Model[i].requested" type="checkbox" class="checkbox" />
            </dt>
        <br />
    }
    </dl>
    <input type="submit" class="btn btn-primary" value="Submit">
</form>