@model NannaKlean.Models.ResCleanDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Please add the details of the residence</h1>

@* <h4>Please provide as much information as possible for a more accurate quote</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="squareFeet" class="control-label"></label>
                <input asp-for="squareFeet" class="form-control" />
                <span asp-validation-for="squareFeet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numLivingRooms" class="control-label"></label>
                <input asp-for="numLivingRooms" class="form-control" />
                <span asp-validation-for="numLivingRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numBedrooms" class="control-label"></label>
                <input asp-for="numBedrooms" class="form-control" />
                <span asp-validation-for="numBedrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numBathRooms" class="control-label"></label>
                <input asp-for="numBathRooms" class="form-control" />
                <span asp-validation-for="numBathRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
@*                 <label asp-for="createTime" class="control-label" type="hidden"></label> *@
                <input asp-for="createTime" class="form-control" type="hidden" />
                <span asp-validation-for="createTime" class="text-danger"></span>
            </div>


            <div class="form-group">
@*                 <label asp-for="contactId" class="control-label"></label> *@
                <input asp-for="contactId" class="form-control" value=@Context.Request.Query["contactId"] type="hidden" />
                <span asp-validation-for="contactId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" style="margin: 6px" />
            </div>
        </form>
    </div>
</div>

@* <div>
    <a asp-action="Index">Back to List</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
